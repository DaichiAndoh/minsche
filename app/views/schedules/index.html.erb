<% if @relationship.is_admin == true %>
    <h1>管理者用ページ</h1>
    <div class="row">
        <div class="col-sm-4">
            <p>作成者：<%= @creator.name %></p>
            <p>グループ名：<%= @group.name %></p>
            <p>紹介文：<%= @group.introduction %></p>
            <p>コード：<%= @group.code %></p>
            <p>パスワード：<%= @group.password %></p>
            <%= link_to 'グループ編集', edit_group_path(@group) %>
        </div>
        <div class="col-sm-8">
            <%= image_tag @group.image.to_s %>
        </div>
    </div>
    
    <ul class="nav nav-tabs nav-justified my-5">
      <li class="nav-item"><a href="<%= group_schedules_path(@group) %>" class="nav-link active">予定表</a></li>
      <li class="nav-item"><a href="<%= group_members_path(@group) %>" class="nav-link">メンバー一覧</a></li>
    </ul>
    
    <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date %>
      
      <% schedules.each do |schedule| %>
          <div>
              <%= link_to schedule.title, group_schedule_path(@group, schedule) %>
          </div>
      <% end %>
    <% end %>
    
    <%= link_to '予定を追加', new_group_schedule_path(@group), class: 'btn btn-lg btn-primary my-3' %>
<% else %>
    <div class="row">
        <div class="col-4">
            <p>グループ名：<%= @group.name %></p>
            <p>紹介文：<%= @group.introduction %></p>
        </div>
        <div class="col-8">
            <%= image_tag @group.image.to_s %>
        </div>
    </div>
    
    <ul class="nav nav-tabs nav-justified my-5">
      <li class="nav-item"><a href="<%= group_schedules_path(@group) %>" class="nav-link active">予定表</a></li>
      <li class="nav-item"><a href="<%= group_members_path(@group) %>" class="nav-link">メンバー一覧</a></li>
    </ul>
    
    <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date %>
      
      <% schedules.each do |schedule| %>
          <div>
              <%= link_to schedule.title, group_schedule_path(@group, schedule) %>
          </div>
      <% end %>
    <% end %>
<% end %>
    