<div class="content en-txt">
  <div class="text-center">
    <h1 class="ja-txt">予定編集</h1>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
        
      <%= form_for [@group, @schedule] do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :title, 'Title' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :start_time, 'Start_time' %><br>
          <%= f.datetime_select :start_time, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :end_time, 'End_time' %><br>
          <%= f.datetime_select :end_time, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :place, 'Place' %>
          <%= f.text_field :place, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :detail, 'Detail' %>
          <%= f.text_area :detail, class: 'form-control' %>
        </div>
  
        <%= f.submit 'Done', class: 'btn btn-primary btn-block mb-3' %>
      <% end %>
      
      <%= link_to '予定詳細へ戻る', group_schedule_path(@group, @schedule), class: 'ja-txt' %>
    </div>
  </div>
</div>