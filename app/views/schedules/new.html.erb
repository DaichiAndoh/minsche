<div class="content ja-txt">
  <div class="text-center">
    <h1>予定作成</h1>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
        
      <%= form_for [@group, @schedule] do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :start_time, '開始時間' %><br>
          <%= f.datetime_select :start_time, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :end_time, '終了時間' %><br>
          <%= f.datetime_select :end_time, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :place, '場所' %>
          <%= f.text_field :place, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :detail, '詳細' %>
          <%= f.text_area :detail, class: 'form-control' %>
        </div>
  
        <%= f.submit '予定追加', class: 'btn btn-primary btn-block mb-3' %>
      <% end %>
      
      <div class="mb-4"><%= link_to 'グループトップへ戻る', group_schedules_path(@group) %></div>
    </div>
  </div>
</div>