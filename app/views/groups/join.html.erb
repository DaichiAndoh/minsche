<div class="content ja-txt">
  <div class="text-center">
    <h1>グループ参加</h1>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
  
      <%= form_with(url: join_path, local: true) do |f| %>
      
        <div class="form-group">
          <%= f.label :code, 'コード' %>
          <%= f.number_field :code, class: 'form-control en-txt' %>
        </div>
  
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control en-txt' %>
        </div>
        
        <%= f.submit '参加', class: 'btn btn-primary btn-block mb-3' %>
      <% end %>
      <%= link_to 'トップへ戻る', root_url %>
    </div>
  </div>
</div>