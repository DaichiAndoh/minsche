<div class="content ja-txt">
  <div class="text-center">
    <h1>グループ作成</h1>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
  
      <%= form_with(model: @group, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :name, 'グループ名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :introduction, 'グループ紹介文' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        
        <!--画像アップロード機能実装用-->
        <!--<div class="form-group">-->
        <!--  <%= f.label :image, 'グループ画像' %><br>-->
        <!--  <%= f.file_field :image %>-->
        <!--</div>-->
        
        <div class="form-group">
          <%= f.label :code, 'コード' %>
          <%= f.number_field :code, class: 'form-control en-txt' %>
        </div>
  
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control en-txt' %>
        </div>
  
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード（確認）' %>
          <%= f.password_field :password_confirmation, class: 'form-control en-txt' %>
        </div>
  
        <%= f.submit '作成', class: 'btn btn-primary btn-block mb-3' %>
      <% end %>
      <div class="mb-4"><%= link_to 'トップへ戻る', root_url %></div>
    </div>
  </div>
</div>