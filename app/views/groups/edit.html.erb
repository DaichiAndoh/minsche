<div class="content ja-txt">
  <div class="text-center">
    <h1>グループ編集</h1>
  </div>
  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
  
      <%= form_with(model: @group, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :name, 'グループ名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :introduction, 'グループ紹介文' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :image, 'グループ画像' %><br>
          <%= f.file_field :image %>
        </div>
        
        <div class="form-group">
          <%= f.label :code, 'コード' %>
          <%= f.number_field :code, class: 'form-control en-txt' %>
        </div>
  
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control en-txt' %>
        </div>
  
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード（確認）' %>
          <%= f.password_field :password_confirmation, class: 'form-control en-txt' %>
        </div>
        
        <%= f.submit '編集完了', class: 'btn btn-block btn-primary mb-3' %>
      <% end %>
      
      <div class="d-flex justify-content-between">
        <div class="mb-4"><%= link_to 'グループトップへ戻る', group_schedules_path(@group) %></div>
        <div class="mb-4"><%= link_to 'グループ削除', @group, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'text-danger' %></div>
      </div>
    </div>
  </div>
</div>