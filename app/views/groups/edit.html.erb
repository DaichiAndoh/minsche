<div class="text-center">
  <h1>グループ編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @group, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, 'Introduction' %>
        <%= f.text_field :introduction, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'Image' %><br>
        <%= f.file_field :image %>
      </div>

      <%= f.submit '完了', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= link_to 'グループ削除', @group, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
  </div>
</div>